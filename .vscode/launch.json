{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "chrome",
      "request": "launch",
      "name": "Launch Chrome against localhost",
      "url": "http://localhost:5173",
      "webRoot": "${workspaceFolder}",
      "sourceMapPathOverrides": {
        "/__root/*": "${webRoot}/*"
      },
      "preLaunchTask": "Start Dev Server",
      "outFiles": ["${workspaceFolder}/dist/**/*.js"]
    }
  ]
}